{
  "manifest_version": 3,
  "name": "Claude Project Updater",
  "version": "1.0",
  "description": "Update Claude.ai project from public GitHub repositories",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://claude.ai/*",
    "https://api.github.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["content.js"]
    }
  ]
}